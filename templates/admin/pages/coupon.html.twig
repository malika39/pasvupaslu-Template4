{% extends 'base_admin.html.twig' %}

{% block title 'Coupon de réduction' %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-xl-8 col-lg-7">

                {# Menu du header #}
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            Code de réduction
                            <span class="badge badge-danger float-right">Il y a 0 coupon(s) expirée</span>
                            <span class="badge badge-primary float-right mr-2">Il y a 1 coupon(s)</span>
                        </h6>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Coupon</th>
                                <th scope="col">Valable jusqu'au</th>
                                <th scope="col">statistiques</th>
                                <th scope="col" style="text-align: right">Options</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>RED985GR</td>
                                <td>05/25/2019</td>
                                <td>utilisé par 2 personne(s)</td>
                                <th scope="row" style="text-align: right">
                                    <a href="#" class="btn btn-danger btn-circle btn-sm" onclick="return confirm('Êtes-vous sûr de bien vouloir supprimer ce coupon ?\n');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </th>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

            <!-- Donut Chart -->
            <div class="col-xl-4 col-lg-5">
                <form class="card shadow mb-4 user" method="POST" action="">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Ajouter un nouveau coupon</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="col-md-12 mb-3">
                            <input type="text" class="form-control form-control-user" placeholder="Coupon ...">
                        </div>
                        <div class="col-md-12 mb-3">
                            <input type="date" class="form-control form-control-user" placeholder="Valable jusqu'au">
                        </div>
                        <button class="btn btn-primary btn-user btn-block">
                            Ajouter le coupon
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


