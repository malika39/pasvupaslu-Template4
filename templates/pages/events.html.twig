                    </div>
                </div>
                <div class="col-md-3">
                    <div class="box-events">
                        <div class="title-events">Salon</div>
                        <a href="{{ path('salon') }}" class="bg-events" style="background: #ffffff url({{ asset('assets/images/illustration/pas.jpg') }}) repeat scroll center center;background-size: cover;"></a>
                        <div class="desc-events">Pas vu, pas lu</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
