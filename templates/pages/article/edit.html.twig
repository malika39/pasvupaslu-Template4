{% extends 'base.html.twig' %}
{% block body %}
    {% set titlePage = 'auteur.articles.edit.title'|trans %}

    <div class="section">
        <div class="title-tab">
            <h2 class="title is-3">{{ titlePage }}</h2>
        </div>

        {% include 'pages/flashMessage.html.twig' %}

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <span class="form-part">{{ 'auteur.articles.add_edit_form.actuality'|trans }}</span>

        <div class="field">
            {{ form_label(form.title, 'le titre'|trans, {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.title, {'attr': {'class': 'input'}}) }}
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.title) }}
            </div>
        </div>

        <div class="field">
            {{ form_label(form.content, 'l'/'extrait du livre'|trans, {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.content, {'attr': {'class': 'textarea'}}) }}
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.content) }}
            </div>
        </div>



        <span class="form-part">{{ 'ajouter une image'|trans }}</span>

        <div class="field">
            {{ form_widget(form.image) }}
            <div class="help is-danger has-text-left">
                {{ form_errors(form.image) }}
            </div>
        </div>

        <div class="field">
            <h5 class="title is-5">{{ 'auteur.articles.edit.cover_image'|trans }}</h5>
            {% if currentImage is not null %}
                <div class="img-coverage-container">
                    <img src="{{ asset(image_article_coverage_display ~ currentImage.alt) }}"
                         alt="{{ currentImage.alt }} "
                         class="img-thumbnail img-coverage" width="270" height="150">
                    <div class="overlay">
                        <span class="button is-danger delete-image"
                              data-trans="{{ 'auteur.articles.edit.delete_cover_image_confirm'|trans }}">
                            {{ 'auteur.articles.edit.delete_cover_image'|trans }}
                        </span>
                    </div>
                </div>
            {% else %}
                <i>{{ 'pas d'/'image'|trans }}</i>
            {% endif %}
        </div>

        {{ form_rest(form) }}

        <div class="control">
            <button type="submit" class="button is-primary">
                {{ 'publier votre livre'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/delete-confirmation.js') }}"></script>

{% endblock %}
