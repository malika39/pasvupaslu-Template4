{% extends 'base.html.twig' %}
{% block body %}
    {% set titlePage = 'auteur.articles.add.title'|trans %}

    <div class="section">
        <div class="title-tab">
            <h2 class="title is-3">{{ titlePage }}</h2>
        </div>

        {{ form_start(form) }}

        {{ form_errors(form) }}

        <span class="form-part">{{ 'auteur.articles.add_edit_form.actuality'|trans }}</span>
        <div class="field">
            {{ form_label(form.title, 'auteur.articles.add_edit_form.article_title'|trans, {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.title, {'attr': {'class': 'input'}}) }}
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.title) }}
            </div>
        </div>

        <div class="field">
            {{ form_label(form.content, 'auteur.articles.add_edit_form.article_content'|trans, {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.content, {'attr': {'class': 'textarea'}}) }}
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.content) }}
            </div>
        </div>



        <span class="form-part">{{ 'auteur.articles.add_edit_form.article_media'|trans }}</span>

        <div class="field">
            {{ form_widget(form.image) }}
            <div class="help is-danger has-text-left">
                {{ form_errors(form.image) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="control">
            <button type="submit" class="button is-primary">
                {{ 'auteur.articles.add_edit_form.submit_button'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
